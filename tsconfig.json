{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "contentlayer/generated": ["./.contentlayer/generated"] //markdown文件编译后存放的目录
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".contentlayer/generated",
        "contentlayer.config.js",
        "compilerOptions.baseUrl"
    ],
    "exclude": ["node_modules", "dist"]
}
